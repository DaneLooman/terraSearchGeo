---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import ArticleCarousel from '../components/ArticleCarousel.astro';
import SmallArticleCarousel from '../components/SmallArticleCarousel.astro';
import '../styles/global.css';
import Process from '../components/Process.astro';
---

<Layout title="TerraSearchGeo">
	<main>
		<Hero 
			title="Revealing the history" 
			title2="beneath your feet"
			subTitle="We provide a variety of survey techniques and expertise for archaeological and historical based projects" 
			imageURL="hero.jpg"	
			link="www.google.com"
			linkText="Call Us"
			link2="www.google.com"
			linkText2="Email Us"
		></Hero>
		<Services></Services>
		<Process></Process>
		<SmallArticleCarousel></SmallArticleCarousel>
	</main>
</Layout>


<style>
	main {
		margin: 0;
	}
</style>

