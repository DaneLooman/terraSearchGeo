<style>
    #hero {
        padding: 140px 80px 80px 80px;
        background-image: url("/bg-topo.webp");
        height: fit-content;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #Hero--text {
        background-color: rgba(255, 255, 255, 0.9);
        height: 100%;
        font-size: 48px;
        line-height: 70px;
        letter-spacing: -0.015em;
        color: #375B2B;
        padding:80px 64px;
    }

    #Hero--text > span {
        text-decoration: underline;
        text-decoration-color: rgba(254,127,45,1);
    }

    #people {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-auto-flow: row dense;
        position: relative;
        height: fit-content;
    }
    .creds {
        padding:72px 80px;
    }

    .creds--title {
        width:fit-content;
        margin-bottom: 16px;
    }
    .creds--title h2 {
        font-weight: 300;
        font-size: 48px;
        line-height: 36px;
        letter-spacing: -0.015em;
        color: #375B2B;
        margin-bottom:10px;
    }

    .creds--title .bar{
        height: 2px;
        width: 100%;
        margin: 2px auto 0 auto;
        background-color: #375B2B;
    }

    .creds > ul {
        list-style-type: none;
        padding:16px;
    }

    .creds  ul  li {
        margin-bottom:8px;
    }

    .bio {
        grid-column: span 2;
        background-color: #28421F;
        color: #fff;
        padding:64px 80px;
    }

    .bio > p {
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 400;
        font-size: 18px;
        font-size: 18px;
        line-height: 30px;
        letter-spacing: -0.015em;
        margin-bottom:24px;
    }

    #people > .img {
        background-color: #375B2B;
        object-fit: cover;
        width: 100%;
        height: 100%;
    }
    #george--img{
        grid-column: 1 / 2;
        grid-row: 3 / 4;
    }

    @media only screen and (max-width: 999px) { 
        #hero {
            padding: 92px 16px 32px 16px;
        }

        #Hero--text {
            font-size: 32px;
            padding:24px;
            line-height: 48px;
        }

        #people {
            grid-template-columns: 1fr;
        }

        #george--img{
            grid-column: unset;
            grid-row: unset;
        }

        .creds{
            padding:32px;
        }
        .creds--title > h2 {
            line-height: 48px;
        }

        #people > .img { 
            width: 100%;
            aspect-ratio: 1 / 1;
        }

        .bio {
            grid-column: span 1;
            padding: 24px;
        }

    }

</style>