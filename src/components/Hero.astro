---
import Button from "../components/Button.astro";

export interface Props {
	title: string;
    title2?: string;
	subTitle: string;
	imageURL: string;
    link?: string;
    linkText?: string;
    link2?: string;
    linkText2?: string;
}

const { title, title2, subTitle, imageURL, link, linkText, link2, linkText2, } = Astro.props;

const cssURL = `url(/${imageURL})`;
---

<div id="hero">
    <h1>{title}<br>{title2}</h1>
    <div class="hero--text">
        <h2>{subTitle}</h2>
        {link && linkText && <Button color="#FE7F2D" hoverColor="#cb6624" text={linkText} link={link} icon="phone"> </Button>}
        {link2 && linkText2 && <Button color="#FE7F2D" hoverColor="#cb6624" text={linkText2} link={link2} icon="mail"> </Button>}   
    </div>
</div>

<style define:vars={{cssURL}}>
    #hero{
        width: 100%;
        height:100%;
        height: calc(100dvh - 160px);
        background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), var(--cssURL);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        padding: 98px 160px 0px 160px;
        /* row-gap: 5rem; */
    }

    #hero > h1 {
        font-size: 4.6rem;
		font-weight: 800;
		margin: 0;
        color:white;
    }

    .hero--text {
        background: rgba(55, 91, 43, .5);
        border: 1px solid rgba(92,92,89,.5);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);top:0;
        color: white;
        width: auto;
        align-self: flex-end;
        max-width: 600px;
        padding:32px;
        text-align: center;
        box-sizing: border-box;
    }

    .hero--text > h2 {
        font-family: Pragmatica,sans-serif;
        font-weight: normal;
        font-size: 16px;
        line-height: 164%;
        letter-spacing: .02em;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        text-size-adjust: none;
        margin-bottom:24px;
    }

    @media only screen and (max-width: 1100px) { 
        #hero{
            align-items:center;
            justify-content: center;
            row-gap: 48px;
            padding: 98px 24px 0px 24px;
            height:100%;
            height:100vh;
            height: 100dvh;
        }

        #hero > h1{
            font-size: 2.6rem;
            margin:0px;
            text-align: center;
            padding: 0;
        }

        .hero--text {
            align-self: auto;
            padding:16px;
            
        }

    }

    @media only screen and (max-height: 500px) { 
        #hero {
            row-gap: 32px;
            padding-top: 50px;
        }

        #hero > h1{
            font-size: 2rem;
            margin:0px;
            text-align: center;
            padding: 0;
        }

        .hero--text {
            padding:16px;
        }
    }

    
</style>