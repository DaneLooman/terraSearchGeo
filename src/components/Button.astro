---
import { Icon } from 'astro-icon';

export interface Props {
	text: string;
	color: string;
	hoverColor: string;
  link: string;
  icon? : string;
}

const { text, color, hoverColor, link, icon } = Astro.props;

---

<a href={link} role="button" class="btn">{icon && <Icon pack="feather" name={icon} />} {text}</a>

<style define:vars={{ color, hoverColor }}>


[astro-icon] {
  height:1rem;
  margin-right:4px;
  margin-bottom:-2px;
  display: inline-flex; 
  flex-direction: row; 
  align-items: end;
}

.btn{
  color:white;
  border:none;
  margin: 0 1rem 0 0;
  border-radius: 0px;
  padding:12px 24px 12px 24px;
  cursor:pointer;
  transition: background-color 1s ease;
  text-decoration: none;
  background-color: var(--color);
  box-sizing: border-box;
  display:inline-block;
  border: 1px solid rgba(92,92,89,.5);
}

.btn:focus{
  outline:0;
  /* box-shadow: 0 0px 0px 2px #fff, 0 0px 0px 4px rgba(0, 0, 0, 0.1); */
}

.btn:hover{
  transition: background-color 1s ease;
  background-color: var(--hoverColor);
}

@media only screen and (max-width: 1100px) {
  .btn{
    margin: 0 8px 0 0;
  }

}

</style>